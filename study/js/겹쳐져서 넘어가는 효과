<script>
	$(".box").each(function(i){
		$(this).addClass('box'+i);
	})
	$(window).scroll(function() {
		var wt = $(window).scrollTop();
		$(".box").each(function(i){
			var t = $(this).offset().top;
			if(wt - t >= 0){
				$(this).addClass("scrollfixed")
			}
		})
		$(".in").each(function(i){
			var t = $(this).offset().top;
			console.log(wt - t);
			if(wt - t < 0){
				$(this).parents(".transp").prev(".box").removeClass("scrollfixed")
			}
		})
		
	})
</script>
